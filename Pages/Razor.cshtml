@page
@model MyApp.Namespace.RazorModel
@* Mathilda Eriksson DT191G *@
@{
    ViewData["Title"] = "Razor";
    string[] courses = {
        "DT057G, Webbutveckling I", 
        "DT093G, Webbutveckling II", 
        "DT084G, Introduktion till programmering i JavaScript", 
        "DT200G, Grafisk teknik för webb", "DT068G, Webbanvändbarhet", 
        "DT003G, Databaser", 
        "DT197G, Webbdesign för CMS", 
        "DT173G, Webbutveckling III", 
        "DT193G, Fullstackutveckling med ramverk", 
        "IK060G, Projektledning", 
        "DT071G, Programmering i C#", 
        "DT162G, Javascriptbaserad webbutveckling"
        };

    var date = DateTime.Now;
    DateTime today = DateTime.Now;
}

<h1 class="display-4">Razor</h1>
<h2 class="display-6">Datum</h2>
<p>Datum/klockslag: @date</p>

<h2 class="display-6">Är det måndag idag?</h2>
    @if (today.DayOfWeek == DayOfWeek.Monday)
    {
        <p>Idag är det måndag!</p>
    }
    else
    {
        <p>Idag är det inte måndag.</p>
    }

<h2 class="display-6">Kurser jag läst</h2>
    <ul>
        @foreach (var course in courses)
        {
            <li>@course</li>
        }
    </ul>
