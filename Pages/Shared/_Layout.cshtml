<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moment 1.1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="site-content">
        <header class="w-100 d-flex justify-content-around align-items-center">
            <img src="~/img/logo.png" alt="Logo" class="m-4">
            @{
                string dateString = DateTime.Now.ToString("yyyy-MM-dd"); //Get todays date with only date part.
                <p class="p-2 border">Dagens datum är: @dateString</p>
            }
        </header>

        <div class="container border-top">
            <div class="row">
                <nav class="col-md-3">
                    <div class="navbar navbar-expand-md navbar-light box-shadow mb-3">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        @{
                            // Determine the active page
                            var activePage = Context.Request.Path;
                        }
                        <div class="navbar-collapse collapse">
                            <ul class="navbar-nav flex-column w-100 text-center">
                                <li class="nav-item m-2">
                                    <a class="@(activePage == "/" ? "nav-link text-light active-link" : "nav-link text-dark")"
                                        asp-area="" asp-page="/Index">Start</a>
                                </li>
                                <li class="nav-item m-2">
                                    <a class="@(activePage == "/Razor" ? "nav-link text-light active-link" : "nav-link text-dark")"
                                        asp-area="" asp-page="/Razor">Razor</a>
                                </li>
                                <li class="nav-item m-2">
                                    <a class="@(activePage == "/About" ? "nav-link text-light active-link" : "nav-link text-dark")"
                                        asp-area="" asp-page="/About">Om sidan</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <main class="col-md-9 p-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer">
        <div class="container p-3 text-center">
            &copy; Mathilda Eriksson, DT191G - Kontakta mig via <a
                href="mailto:maer1200@student.miun.se">maer1200@student.miun.se</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>